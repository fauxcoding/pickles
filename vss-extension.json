{
  "manifestVersion": 1,
  "version": "1.22.6",
  "name": "pickles",
  "description": "A simple gherkin editor for the work item form",
  "publisher": "heymega",
  "demands": [
    "api-version/3.0"
  ],
  "categories": [
    "Azure Boards"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "branding": {
    "color": "rgb(127, 0, 255)",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/heymega/pickles"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "icons": {
    "default": "img/pickles-logo.png"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "img",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "sample-work-item-form-control",
      "type": "ms.vss-work-web.work-item-form-control",
      "description": "Gherkin editor form control",
      "targets": [
        "ms.vss-work-web.work-item-form"
      ],
      "properties": {
        "name": "Gherkin",
        "uri": "dist/gherkin/gherkin.html",
        "height": 600,
        "inputs": [
          {
            "id": "GherkinFieldName",
            "name": "Field carrying a gherkin",
            "description": "Reference name of a string field to be updated.",
            "type": "WorkItemField",
            "validation": {
              "dataType": "String",
              "isRequired": true
            }
          }
        ]
      }
    }
  ],
  "scopes": [
    "vso.work"
  ]
}